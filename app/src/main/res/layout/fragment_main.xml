<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/room_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="16051437153025"
        android:visibility="gone" />

    <EditText
        android:id="@+id/teacher_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/room_id"
        android:text="454907548"
        android:visibility="gone" />

    <EditText
        android:id="@+id/teacher_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacher_id"
        android:text="魏婷"
        android:visibility="gone" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teacher_name"
        android:text="进入房间"
        android:visibility="gone" />

    <Button
        android:id="@+id/whiteboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:text="白板"
        android:visibility="gone" />

    <Button
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/whiteboard"
        android:text="参加码登录页" />

</RelativeLayout>
